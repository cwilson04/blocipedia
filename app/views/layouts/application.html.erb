<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Blocipedia", root_path %></li>
      <li><%= link_to "All Wikis", wikis_path %></li>
      <li><%= link_to 'New Wiki', new_wiki_path, :class => 'navbar-link' %></li>
      <li>
        <% if current_user %>
          <%= link_to 'User Profile', user_path(current_user), :class => 'navbar-link' %>
        <% end %>
      </li>
    </ul>
    <ul class="navbar-text navbar-right">
      <% if user_signed_in? %>
        Signed in as: <strong><%= current_user.email %></strong> |
        <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
        
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %></li>
        <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
      <% end %>
    </ul>
  </div>
 
  <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash.now[:alert] %>
       <div class="alert alert-danger">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash.now[:alert] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

    
  <%= yield %>

  </div>
</body>
</html>
