 <div class="container">
  <h1>Edit Wiki</h1>
 
  <div class="row">
   <div class="col-md-4">
     <p>Guidelines for wikis</p>
     <ul>
       <li>Be nice.</li>
       <li>Be accurate.</li>
       <li>Be active.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Edit wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Edit wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
  </div>
 </div>
 <h2>Add Collaborator</h2>
 <%= form_tag [@wiki, Collaborator.new] do %>
  <%= text_field_tag :email %>
  <%= submit_tag %>
 <% end %>
 